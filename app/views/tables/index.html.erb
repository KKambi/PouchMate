              <div class="form-group-com">
                  <img src='<%=@user.profile_img.thumb3 %>' class='mycommentprofileimage'>
                  <%= f.text_field :content, class: 'form-control', placeholder: '댓글달기'%>
              </div>
              <div class="form-group">
                  <%=f.submit "작성", class: 'btn btn-default'%>
              </div>
          <% end %>
      </div>      
  </div>
</div>


