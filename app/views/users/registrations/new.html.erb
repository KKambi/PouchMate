<h2>회원가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :"이메일" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"이름" %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :"닉네임" %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"프로필 사진" %>
    <%= f.file_field :profile_img %>
  </div>

  <div class="field">
    <%= f.label :"나이" %>
    <%= f.select :age, options_for_select(10..99) %>
  </div>
  
  <div class="field">
    <%= f.label :"성별" %>
    <%= f.radio_button(:gender, "남자", :checked => true) %>
    <%= label_tag(:gender, "남자") %>
    <%= f.radio_button(:gender, "여자") %>
    <%= label_tag(:gender, "여자") %>
  </div>
  
  <div class="field">
    <%= f.label :"비밀번호" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>자 이상)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :"비밀번호 확인" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  
  <div>
    <%= f.hidden_field :admin %>
  </div>

  <div class="actions">
    <%= hidden_field_tag :redirect_to, params[:redirect_to] %>
    <%= f.submit "회원가입" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
